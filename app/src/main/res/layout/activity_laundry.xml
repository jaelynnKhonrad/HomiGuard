<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LockActivity">

    <!-- AREA DIM -->
    <FrameLayout
        android:id="@+id/dimArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#FFFFFF"
            app:title="Device Info"
            app:titleTextColor="#000000"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <!-- CARD SMART LOCK -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/kotak"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/laundry"
                    android:layout_marginEnd="16dp"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laundry Hanger"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvStatusLaundry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchLaundry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_marginEnd="10dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- CARD RIWAYAT -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#DCDCDC"
            android:elevation="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="History"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- LIST RIWAYAT -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHistoryLaundry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Schedule"
            android:textAllCaps="false"
            android:backgroundTint="@color/jordyblue"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- BOTTOM SHEET FIXED -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_draggable="true"
        app:behavior_peekHeight="500dp">

        <!-- HANDLE -->
        <View
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/drag_handle" />

        <!-- SCHEDULE LIST -->
        <LinearLayout
            android:id="@+id/scheduleListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Schedule"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSchedule"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingBottom="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                android:id="@+id/btnAddSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/jordyblue"
                android:text="Add Schedule"
                android:textAllCaps="false"
                android:textColor="#000" />
        </LinearLayout>

        <!-- ADD SCHEDULE FORM -->
        <LinearLayout
            android:id="@+id/addScheduleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <!-- ======= START OF YOUR ORIGINAL FORM (TIDAK DIUBAH) ======= -->

            <!-- Schedule Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Type"
                android:textSize="13sp"
                android:textColor="#2C2C2C"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgScheduleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbOnce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once"
                    android:checked="true"
                    android:textColor="#2C2C2C"
                    android:textSize="14sp"
                    android:buttonTint="@color/jordyblue"
                    android:layout_marginEnd="24dp" />

                <RadioButton
                    android:id="@+id/rbEveryday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyday"
                    android:textColor="#2C2C2C"
                    android:textSize="14sp"
                    android:buttonTint="@color/jordyblue" />
            </RadioGroup>

            <!-- DATE PICKER SELECTOR AREA (akan terganti lewat dialog) -->
            <LinearLayout
                android:id="@+id/layoutDateSelector"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Select the desired date"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_input"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="#2C2C2C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

            <!-- Time Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Select the desired time"
                android:textColor="#9E9E9E"
                android:textSize="11sp"
                android:paddingLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!-- ON TIME -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="On Time"
                        android:textColor="#2C2C2C"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etOnTime"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_time_input"
                            android:focusable="true"
                            android:gravity="center"
                            android:textColor="#2C2C2C"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- OFF TIME -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Off Time"
                        android:textColor="#2C2C2C"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etOffTime"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_time_input"
                            android:focusable="true"
                            android:gravity="center"
                            android:textColor="#2C2C2C"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Spacer agar bottom sheet tidak turun -->
            <View
                android:id="@+id/dateSpacer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnConfirmAddSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/jordyblue"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnBackToList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#999"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>