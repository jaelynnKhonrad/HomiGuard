<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_bottom_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Handle Bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_handle_bar" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C" />

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set your laundry schedule"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <!-- Month Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 2025"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select the desired date"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnPrevMonth"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_chevron_left"
                android:padding="8dp"
                android:contentDescription="Previous Month"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btnNextMonth"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_chevron_right"
                android:padding="8dp"
                android:contentDescription="Next Month"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Date Selector -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/layoutDateSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the desired time"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- On Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Time"
                    android:textSize="13sp"
                    android:textColor="#2C2C2C"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etOnTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold"
                        android:background="@drawable/bg_time_input"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/tvOnAmPm"
                        android:layout_width="64dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:text="AM"
                        android:background="@drawable/bg_time_ampm"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Off Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off Time"
                    android:textSize="13sp"
                    android:textColor="#2C2C2C"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etOffTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold"
                        android:background="@drawable/bg_time_input"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/tvOffAmPm"
                        android:layout_width="64dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:text="AM"
                        android:background="@drawable/bg_time_ampm"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Clear All"
                android:textColor="#2C2C2C"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_outline" />

            <Button
                android:id="@+id/btnConfirmSchedule"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Schedule"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary" />




        </LinearLayout>


        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary" />

    </LinearLayout>


</ScrollView>
